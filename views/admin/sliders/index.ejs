<!DOCTYPE html>
<html lang="en">
  <% include ../../partials/admin/head %>

  <body>
    <div id="app" style="zoom: 75%;">
      <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
        <div class="">
          <a class="navbar-brand" href="javascript:;">
            Admin Panel
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Left Side Of Navbar -->
            <ul class="navbar-nav mr-auto"></ul>

            <!-- Right Side Of Navbar -->
            <ul class="navbar-nav ml-auto">
              <!-- Authentication Links -->
              <!-- <li class="nav-item">
                <a class="nav-link" href="/">Login</a>
              </li> -->
            </ul>
          </div>
        </div>
      </nav>

      <main class="py-4">
        <div class="">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <% if(message != ""){ %>
              <div class="alert alert-success" role="alert">
                <strong>Well done!</strong> <%=message%>
              </div>
              <% } %>
              <div class="card">
                <div class="card-header">
                  <div class="row">
                    <div class="col-md-6">All Sliders</div>
                    <div class="col-md-6 text-right">
                      <a
                        href="/admin/sliders/create"
                        class="btn btn-success btn-sm"
                        >Create New</a
                      >
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% let counter = 1; %> <% for(var i in sliders) { %>
                      <tr>
                        <td><%= counter %></td>
                        <td><%= sliders[i].title %></td>
                        <td></td>
                        <td>
                          <a
                            class="btn btn-info btn-sm"
                            href="/admin/sliders/<%= sliders[i]._id %>"
                            >View</a
                          >
                          <a
                            class="btn btn-warning btn-sm"
                            href="/admin/sliders/edit/<%= sliders[i]._id %>"
                            >Edit</a
                          >
                          <a
                            class="btn btn-danger btn-sm"
                            href="/admin/sliders/delete/<%= sliders[i]._id %>"
                            >Delete</a
                          >
                        </td>
                      </tr>
                      <% counter++; } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
